<div class="m-3">
  <div class="cards">
      <% @surfboards.each do |surfboard| %>
      <div class="card">
        <%= link_to surfboard_path(surfboard), class:"text-decoration-none" do %>
            <div class="card-product">
              <img src= <%= cl_image_path surfboard.photos[0].key %>>
              <div class="card-product-infos mt-3 mb-3">
                <h3><%= surfboard.title %></h3>
                <% @results = Geocoder.search([surfboard.latitude, surfboard.longitude]) %>
                <h2><%= @results.first.county %></h2>
                <p>$<%= surfboard.price %> per day</p>
                <p>Rated: *<%= surfboard.rating %>*</p>
                <p><%= surfboard.description[0,48] %>...</p>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div style="width: 40%; height: 750px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
</div>
