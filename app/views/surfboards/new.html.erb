<h1>Surfboards#new</h1>
<p>Find me in app/views/surfboards/new.html.erb</p>

<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Add a new surfboard</h3>
        <%= simple_form_for @surfboard do |f| %>
          <%= f.input :description, placeholder: 'The Big Kahuna' %>
          <%= f.input :price %>
          <%= f.input :rating %>
          <%= f.input :photos, as: :file, input_html: { multiple: true } %>
          <%= f.submit class: 'btn btn-flat' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
